<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>

		<StackPanel Orientation="Horizontal">
			<Button Classes="primary circle">
				<TextBlock>Test</TextBlock>
			</Button>
			<Button Classes="danger circle">
				<TextBlock>Test</TextBlock>
			</Button>
			<Button Classes="warning circle">
				<TextBlock>Test</TextBlock>
			</Button>
		</StackPanel>
	</Design.PreviewWith>

	<Style Selector="TextBlock">
		<Setter Property="FontSize" Value="20" />
		<Setter Property="FontFamily" Value="resm:Resona.UI.Fonts.Acme-Regular.ttf?assembly=Resona.UI#Acme" />
	</Style>
	
	<Style Selector="Button.primary">
		<Setter Property="Background" Value="DarkSalmon" />
	</Style>

	<Style Selector="Button.danger">
		<Setter Property="Background" Value="Red" />
	</Style>

	<Style Selector="Button.warning">
		<Setter Property="Background" Value="DarkGoldenrod" />
	</Style>

	<Style Selector="Button.circle">
		<Setter Property="Template">
			<ControlTemplate>
				<Border
					CornerRadius="180"
					BorderBrush="Black"
					BorderThickness="0"
					ClipToBounds="True"
					Width="50"
					Height="50"
				>
					<ContentPresenter Name="PART_ContentPresenter"
									  BorderBrush="{TemplateBinding BorderBrush}"
									  Content="{TemplateBinding Content}"
									  Background="{TemplateBinding Background}"
									  ContentTemplate="{TemplateBinding ContentTemplate}"
									  TextBlock.Foreground="{TemplateBinding Foreground}"
									  Padding="{TemplateBinding Padding}"
									  HorizontalContentAlignment="Center"
									  VerticalContentAlignment="Center" />
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
