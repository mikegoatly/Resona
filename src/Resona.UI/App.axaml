<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Resona.UI"
             x:Class="Resona.UI.App"
			 xmlns:sys="using:System"
			 RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:DataTemplateViewLocator/>
    </Application.DataTemplates>

	<Application.Resources>
		<sys:Double x:Key="PlayerHeight">100</sys:Double>
		<Color x:Key="WarningColorDark">#99664b00</Color>
		<Color x:Key="WarningColor">DarkGoldenrod</Color>
		<Color x:Key="DangerColorDark">DarkRed</Color>
		<Color x:Key="DangerColor">Red</Color>
		<Color x:Key="PrimaryColorDark">#4A2040</Color>
		<Color x:Key="PrimaryColor">#9F6BA0</Color>
		<Color x:Key="SecondaryColorDark">#30362F</Color>
		<Color x:Key="SecondaryColor">#638763</Color>
		<Color x:Key="SuccessColor">Green</Color>
	</Application.Resources>
	
    <Application.Styles>
		<FluentTheme />
		<StyleInclude Source="/Styles/Styles.axaml"/>
	</Application.Styles>

</Application>


