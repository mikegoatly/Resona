<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Resona.UI.Views.Settings.SettingsView"
             xmlns:local="using:Resona.UI.Views.Settings">
	<TabControl Margin="80,20" MaxWidth="800">
		
		<TabItem Header="Audio settings">
			<local:AudioSettingsView DataContext="{Binding AudioSettings}" />
		</TabItem>
		<TabItem Header="Bluetooth settings">
			<local:BluetoothSettingsView DataContext="{Binding BluetoothSettings}" />
		</TabItem>
	</TabControl>

</UserControl>
