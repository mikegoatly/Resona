<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Resona.UI.Views.Settings.SettingsView"
             xmlns:local="using:Resona.UI.Views.Settings">
	<Grid Margin="80,20" MaxWidth="800">
		<Border
	BorderBrush="{StaticResource PrimaryColorDark}"
	BorderThickness="2"
	CornerRadius="0,20,20,20"
	Margin="0,48,0,0">

		</Border>
		<TabControl Padding="0,20,0,0" Margin="0">

			<TabItem Header="Audio settings">
				<local:AudioSettingsView />
			</TabItem>
			<TabItem Header="Bluetooth devices">
				<local:BluetoothSettingsView />
			</TabItem>
			<TabItem Header="Advanced">
				<local:AdvancedSettingsView />
			</TabItem>
		</TabControl>

	</Grid>

</UserControl>
